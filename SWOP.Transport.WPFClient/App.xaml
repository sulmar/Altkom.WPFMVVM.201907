<Application x:Class="SWOP.Transport.WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SWOP.Transport.WPFClient"
             
             StartupUri="Views/ShellView.xaml">
    <Application.Resources>
        
        <ResourceDictionary>
            <local:ViewModelLocator x:Key="ViewModelLocator" />

            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="Resources/Styles.xaml" />-->
                
                <!-- https://docs.microsoft.com/pl-pl/dotnet/framework/wpf/app-development/pack-uris-in-wpf-->
                
                <ResourceDictionary Source="pack://application:,,,/SWOP.Resources;component/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SWOP.Resources;component/ControlTemplates.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
